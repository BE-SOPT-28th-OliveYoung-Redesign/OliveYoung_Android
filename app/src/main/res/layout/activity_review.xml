<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ReviewActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/appbar_review"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_review_appbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:text="리뷰 상세 보기"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_ic_bag"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider_bottom_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_thin"
            app:layout_constraintTop_toBottomOf="@id/appbar_review" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_product_desc"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:padding="14dp"
            app:layout_constraintTop_toBottomOf="@id/divider_bottom_appbar">

            <ImageView
                android:id="@+id/img_product_desc"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/img_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_product_desc_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:ellipsize="end"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:text="니들리"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_product_desc"
                app:layout_constraintTop_toTopOf="@id/img_product_desc" />

            <TextView
                android:id="@+id/txt_product_desc_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:text="니들리 데일리 토너 패드 60매 기획 (추가 5매 증정)"
                android:textColor="@color/gray1"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_product_desc"
                app:layout_constraintTop_toBottomOf="@id/txt_product_desc_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider_bottom_product_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_regular"
            app:layout_constraintTop_toBottomOf="@id/constraint_layout_product_desc" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_reviewer_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="0dp"
            app:layout_constraintTop_toBottomOf="@id/divider_bottom_product_desc">

            <ImageView
                android:id="@+id/img_reviewer_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/img_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_reviewer_label"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/ic_customer_label"
                app:layout_constraintStart_toEndOf="@id/img_reviewer_profile"
                app:layout_constraintTop_toTopOf="@id/img_reviewer_profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="니은없음니은"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/img_reviewer_label"
                app:layout_constraintStart_toEndOf="@id/img_reviewer_label"
                app:layout_constraintTop_toTopOf="@id/img_reviewer_label" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_reviewer_properties"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_reviewer_profile"
                app:layout_constraintTop_toBottomOf="@id/img_reviewer_label" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider_bottom_reviewer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/divider_thin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraint_layout_reviewer_profile" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_recommendation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_bottom_reviewer">

            <ImageView
                android:id="@+id/img_star_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_star_colored"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_star_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_star_colored"
                app:layout_constraintStart_toEndOf="@id/img_star_1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_star_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_star_colored"
                app:layout_constraintStart_toEndOf="@id/img_star_2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_star_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_star_colored"
                app:layout_constraintStart_toEndOf="@id/img_star_3"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_star_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_star_colored"
                app:layout_constraintStart_toEndOf="@id/img_star_4"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/montserrat_regular"
                android:includeFontPadding="false"
                android:text="2021.05.01"
                android:textColor="@color/gray2"
                app:layout_constraintStart_toEndOf="@id/img_star_5"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chip_reviewer_characteristic_1"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/rect_rounded_red"
                android:gravity="center_horizontal"
                android:text="피부타입"
                android:textAlignment="center"
                android:textColor="@color/red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_star_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:text="복합성에 좋아요"
                app:layout_constraintBottom_toBottomOf="@id/chip_reviewer_characteristic_1"
                app:layout_constraintStart_toEndOf="@+id/chip_reviewer_characteristic_1"
                app:layout_constraintTop_toTopOf="@id/chip_reviewer_characteristic_1" />

            <TextView
                android:id="@+id/chip_reviewer_characteristic_2"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/rect_rounded_red"
                android:gravity="center_horizontal"
                android:text="피부고민"
                android:textAlignment="center"
                android:textColor="@color/red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chip_reviewer_characteristic_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:text="주름/미백에 좋아요"
                app:layout_constraintBottom_toBottomOf="@id/chip_reviewer_characteristic_2"
                app:layout_constraintStart_toEndOf="@+id/chip_reviewer_characteristic_2"
                app:layout_constraintTop_toTopOf="@id/chip_reviewer_characteristic_2" />

            <TextView
                android:id="@+id/chip_reviewer_characteristic_3"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/rect_rounded_red"
                android:gravity="center_horizontal"
                android:text="자극도"
                android:textAlignment="center"
                android:textColor="@color/red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chip_reviewer_characteristic_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:text="보통이에요"
                app:layout_constraintBottom_toBottomOf="@id/chip_reviewer_characteristic_3"
                app:layout_constraintStart_toEndOf="@+id/chip_reviewer_characteristic_3"
                app:layout_constraintTop_toTopOf="@id/chip_reviewer_characteristic_3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_imgs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:clipToPadding="false"
            android:paddingHorizontal="8dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/constraint_layout_recommendation"
            tools:itemCount="4"
            tools:listitem="@layout/item_review_image"
            tools:orientation="horizontal" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_review_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingBottom="40dp"
            app:layout_constraintTop_toBottomOf="@id/recycler_view_imgs">

            <TextView
                android:id="@+id/txt_review_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="@string/txt_review"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_review_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="이 리뷰가 도움이 돼요!"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_review_content" />

            <ImageView
                android:id="@+id/img_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_ic_like_number"
                app:layout_constraintBottom_toBottomOf="@+id/txt_review_like"
                app:layout_constraintStart_toEndOf="@+id/txt_review_like"
                app:layout_constraintTop_toTopOf="@+id/txt_review_like" />

            <TextView
                android:id="@+id/txt_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="신고하기"
                android:textColor="@color/gray3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/img_report"
                app:layout_constraintTop_toBottomOf="@id/txt_review_content" />

            <ImageView
                android:id="@+id/img_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_ic_report"
                app:layout_constraintBottom_toBottomOf="@+id/txt_report"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_report" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_regular"
            app:layout_constraintTop_toBottomOf="@id/constraint_layout_review_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>